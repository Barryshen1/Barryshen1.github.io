FROM python:3.11-slim

ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1 \
    PORT=8080

WORKDIR /app

RUN apt-get update && apt-get install -y --no-install-recommends build-essential && rm -rf /var/lib/apt/lists/*

COPY scripts/chatbot_proxy.py /app/chatbot_proxy.py

# Keep requirements minimal; adjust version pin if desired.
RUN pip install --no-cache-dir google-genai

EXPOSE 8080

CMD ["python", "/app/chatbot_proxy.py", "--host", "0.0.0.0", "--port", "8080"]
